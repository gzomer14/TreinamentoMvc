@model IEnumerable<NW.CursoMvc.Application.ViewModels.ProdutoViewModel>

@{
    ViewBag.Title = "Fornecedor";
}

<h2>Produtos</h2>

   @Html.ActionLink("Adicionar novo produto", "Create", "Produtos")
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nomeProd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.descricao)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.valor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.peso)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.nomeProd)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.descricao)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.valor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.peso)
                </td>
                <td>@Html.ActionLink("Editar","Edit", new {id = item.ProdutoId})</td>
                <td>@Html.ActionLink("Deletar","Delete",new {id = item.ProdutoId})</td>
            </tr>
        }

    </table>
    <hr />
    <p>
        @Html.ActionLink("Voltar para os fornecedores", "Index", "Fornecedores")
    </p>